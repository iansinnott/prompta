{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run ui:build",
    "beforeDevCommand": "npm run ui:dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "Prompta",
    "version": "0.10.1-alpha"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "Â© 2023 Ian Sinnott",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon_32x32.png",
        "icons/icon_128x128.png",
        "icons/icon_128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.prompta.dev",
      "longDescription": "Yet another UI for using the ChatGPT API",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Prompta",
        "width": 880,
        "minWidth": 500,
        "maxWidth": 1080,
        "transparent": true,
        "decorations": false
      }
    ]
  }
}