{

  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Prompta",
  "version": "5.4.3",
  "identifier": "com.prompta.dev",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run ui:dev",
    "beforeBuildCommand": "npm run ui:build-static"
  },
  "app": {
    "windows": [
      {
        "resizable": true,
        "title": "Prompta",
        "minWidth": 500,
        "maxWidth": 1080,
        "transparent": true,
        "decorations": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Â© 2024 Ian Sinnott",
    "longDescription": "Yet another UI for using the ChatGPT API",
    "shortDescription": "",
    "macOS": {
      "entitlements": null
    },
    "targets": "all",
    "icon": [
      "icons/icon_32x32.png",
      "icons/icon_128x128.png",
      "icons/icon_128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
